div.popup-wrapper
    div.popup-module
        h1.popup-module__header Вы хотите забронировать:
        p.popup-module__date
        form.popup-module-form
            div.popup-module-input-wrapper
                span.input-wrapper__instruction Выберите время:
                div.time-input-wrapper
                    div.custom-select.begin-time-wrapper
                        div.custom-select-actual.begin-time
                            input(type='text', name='start-time', data-readonly, required).time-input
                            i.fas.fa-chevron-down
                            ul.custom-select-variant-list.begin-time-variants-list


                        div.custom-select-actual.begin-time
                            input(type='text', name='start-time', data-readonly, value='12:00', required).time-input
                            i.fas.fa-chevron-down
                            ul.custom-select-variant-list.begin-time-variants-list

            div.input-wrapper__instruction
                label.user-type
                    input(type='radio', name='user-type').user-type__radio
                    span Физ.лицо
                label.user-type
                    input(type='radio', name='user-type', checked).user-type__radio
                    span Юр.лицо
            div.popup-module-input-wrapper.popup-module-input-wrapper--contacts                
                input(type='text', name='name', placeholder='Имя', required).popup-module-form__input
                input(type='text', name='phone', placeholder='Телефон', required).popup-module-form__input
                input(type='text', name='mail', placeholder='E-mail', required).popup-module-form__input    
            div.popup-module-input-wrapper.popup-module-input-wrapper--agreement
                label
                    input(type='checkbox', name='agreement', required, checked)
                    span Я согласен с #[a условиями договора] и #[a политикой конфиденциальности]
            div.popup-module-input-wrapper
                input(type='submit', value='Забронировать').popup-module-form__submit
                div.order-price
                    span.order-price__header Стоимость:
                    span.order-price__number
                        input(type='text', name="sum", value="", data-price="", data-readonly, required).order-price__sum
                    span.order-price__currency руб.
        span.popup-module__close
            i.fas.fa-times
